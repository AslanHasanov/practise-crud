@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@using DemoApplication.Areas.Admin.ViewModels.UserManagament
@model List<UserViewModel>

<div class="col-lg-12">
    <div class="row justify-content-end">
        <div class="">
            <a asp-route="admin-user-list" target="_blank" class="btn btn-secondary">Add new book</a>
        </div>
    </div>
</div>
<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Users</h4>
        </div><!--end card-header-->
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped mb-0">
                    <thead>
                        <tr>
                            <th>Email</th>
                            <th>FirstName</th>
                            <th>LastName</th>
                            <th>Created at</th>
                            <th>Updated at</th>
                            <th>Role</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.Email</td>
                                <td>@user.FirstName</td>
                                <td>@user.LastName</td>
                                <td>@user.CreatedAt.ToString("dd/MM/yyyy")</td>
                                <td>@user.UpdatedAt.ToString("dd/MM/yyyy")</td>
                                <td>@user.Role</td>
                                <td>
                                    <a asp-route="admin-user-update" asp-route-id="@user.Id"><i class="las la-pen text-secondary font-16"></i></a>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table><!--end /table-->
            </div><!--end /tableresponsive-->
        </div><!--end card-body-->
    </div><!--end card-->
</div>